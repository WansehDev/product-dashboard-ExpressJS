<%- include("../templates/header") %> 
<%- include("../templates/navlogout", user) %> 


<div class="container dashboard">
    <div class="heading-content">
        <h2 class="title-container">Manage Products</h2>
        <div>
            <a href="/admin/create">Create New Product</a>
        </div>
    </div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Inventory Count</th>
                <th>Quantity Sold</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        <% products.forEach(product => { %>
            <tr>
                <td><%= product.id %> </td>
                <td><a href=<%- `/product/show/${product.id}` %>><%= product.product_name %> </a></td>
                <td><%= product.product_inventory %> </td>
                <td><%= product.product_qty_sold %> </td>
                <td>
                    <!-- Add the product ID to edit and remove later-->
                    <a href=<%= `/edit/${product.id}` %> >Edit</a>
                    <a href=<%= `/remove/${product.id}` %>>Remove</a>
                </td>
            </tr>
        <% }) %>
    </table>

</div>

</body>

</html>